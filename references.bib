@UNPUBLISHED{Odell2019-ag,
  title    = "Epigenetically bistable regions across neuron-specific genes
              govern neuron eligibility to a coding ensemble in the hippocampus",
  author   = "Odell, S C and Taki, F and Klein, S and Chen, R J and Levine, O B
