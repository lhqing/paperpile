}

@UNPUBLISHED{Jiang2022-qd,
  title    = "Programmable eukaryotic protein expression with {RNA} sensors",
  author   = "Jiang, Kaiyi and Koob, Jeremy and Chen, Xi Dawn and Krajeski,
              Rohan N and Zhang, Yifan and Villiger, Lukas and Zhou, Wenyuan
